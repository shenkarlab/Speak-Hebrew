{
  "name": "talk hebrew",
  "version": "0.0.0.1",
  "manifest_version":2,
  "description": "change page latin words to hebrew",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["background.js"
      ]
    }
  ],
  "browser_action":{
    "default_title":"talk hebrew",
    "default_icon":"icon.png",
    "default_popup": "popup.html"
  },
  "permissions":[
    "activeTab",
    "background",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]

}
